{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2022"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*.ts"]
}
